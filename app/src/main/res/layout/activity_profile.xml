<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_new"
    tools:context=".ProfileActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_buttom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/header_profile"
            android:layout_marginTop="-30dp"
            android:adjustViewBounds="true"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_setting_faq"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="45dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@id/nav_bottom"/>
    <LinearLayout
        android:id="@+id/nav_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_nav_bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="50dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:scaleType="fitCenter"
            android:padding="1dp"
            android:src="@drawable/ic_baseline_home_24"
            android:background="#000000FF"/>
        <ImageButton
            android:id="@+id/btn_chat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:scaleType="fitCenter"
            android:padding="1dp"
            android:src="@drawable/ic_round_question_answer_24"
            android:background="#000000FF"/>
        <ImageButton
            android:id="@+id/btn_notif"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:scaleType="fitCenter"
            android:padding="1dp"
            android:src="@drawable/ic_baseline_notifications_24"
            android:background="#000000FF"/>
        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:scaleType="fitCenter"
            android:padding="1dp"
            android:src="@drawable/ic_round_person_24"
            android:background="#000000FF"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>